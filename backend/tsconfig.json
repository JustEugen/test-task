{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6", "es2021"],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "@utils/*": ["utils/*"],
      "@api/*": ["api/*"],
      "@libs/*": ["libs/*"],
      "@services/*": ["services/*"],
      "@core/*": ["core/*"],
      "@entities/*": ["entities/*"],
      "@cron/*": ["cron/*"],
      "@guards": ["guards/*"],
      "@env": ["env-config.ts"]
    }
  },
  "include": ["src"]
}
